<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tax Regime - New User</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="styles/register.css" />
  </head>

  <body>
    <nav class="navbar navbar-dark bg-dark fixed-top">
      <div class="container-fluid">
        <button
          class="navbar-toggler me-2 text-white"
          type="button"
          data-bs-toggle="offcanvas"
          data-bs-target="#offcanvasDarkNavbar"
          aria-controls="offcanvasDarkNavbar"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <a class="navbar-brand me-auto" href="#" style="padding-left: 10px"
          >Tax Regime</a
        >
        <a href="/" class="btn btn-link login-link">Log In</a>

        <!-- Offcanvas content for mobile view -->
        <div
          class="offcanvas offcanvas-start text-bg-dark"
          tabindex="-1"
          id="offcanvasDarkNavbar"
          aria-labelledby="offcanvasDarkNavbarLabel"
        >
          <div class="offcanvas-header">
            <h5
              class="offcanvas-title"
              style="padding-top: 15px"
              id="offcanvasDarkNavbarLabel"
            >
              Tax Regime
            </h5>
            <button
              type="button"
              class="btn-close btn-close-white"
              data-bs-dismiss="offcanvas"
              aria-label="Close"
            ></button>
          </div>

          <hr class="bg-white" style="height: 2px" />

          <div class="offcanvas-body">
            <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="#">Change Password</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="#">Log In</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </nav>

    <div class="container mt-5">
      <div class="card shadow-lg">
        <div class="card-header text-white">
          <h4 class="mb-0">New User</h4>
        </div>
        <div class="card-body">
          <small class="form-text text-muted mb-3" style="font-weight: 600">
            Password is required to have a minimum of 6 characters.
          </small>

          <!-- Fieldset for User Details -->
          <form id="createUserForm" action="/createuser" method="post">
            <fieldset class="border p-3">
              <legend class="float-none w-auto px-2 text-primary">
                <strong> User Details</strong>
              </legend>
              <div class="row mb-3">
                <label
                  for="aadharno"
                  class="col-md-4 col-12 col-form-label text-md-end"
                  >Aadhar No. :</label
                >
                <div class="col-md-8 col-12">
                  <input
                    type="tel"
                    class="form-control"
                    id="aadharno"
                    name="aadharno"
                    placeholder="Aadhar Number"
                    required
                  />
                </div>
              </div>
              <div class="row mb-3">
                <label
                  for="username"
                  class="col-md-4 col-12 col-form-label text-md-end"
                  >User Name :</label
                >
                <div class="col-md-8 col-12">
                  <input
                    type="text"
                    class="form-control"
                    id="username"
                    name="username"
                    placeholder="User Name"
                    required
                  />
                </div>
              </div>
              <div class="row mb-3">
                <label
                  for="email"
                  class="col-md-4 col-12 col-form-label text-md-end"
                  >E-mail :</label
                >
                <div class="col-md-8 col-12">
                  <input
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    placeholder="E-mail"
                    required
                  />
                </div>
              </div>
              <div class="row mb-3">
                <label
                  for="contactno"
                  class="col-md-4 col-12 col-form-label text-md-end"
                  >Contact No. :</label
                >
                <div class="col-md-8 col-12">
                  <input
                    type="tel"
                    class="form-control"
                    id="contactno"
                    name="contactno"
                    placeholder="Contact Number"
                    required
                  />
                </div>
              </div>
              <div class="row mb-3">
                <label
                  for="department"
                  class="col-md-4 col-12 col-form-label text-md-end"
                  >Department :</label
                >
                <div class="col-md-8 col-12">
                  <input
                    type="tel"
                    class="form-control"
                    id="department"
                    name="department"
                    placeholder="Department"
                    required
                  />
                </div>
              </div>
              <div class="row mb-3">
                <label
                  for="password"
                  class="col-md-4 col-12 col-form-label text-md-end"
                  >Password :</label
                >
                <div class="col-md-8 col-12">
                  <input
                    type="password"
                    class="form-control"
                    id="password"
                    minlength="6"
                    name="password"
                    placeholder="Password"
                    required
                  />
                </div>
              </div>
              <div class="row mb-3">
                <label
                  for="confirmpassword"
                  class="col-md-4 col-12 col-form-label text-md-end"
                  >Confirm Password :</label
                >
                <div class="col-md-8 col-12">
                  <input
                    type="password"
                    class="form-control"
                    id="confirmpassword"
                    name="confirmpassword"
                    minlength="6"
                    placeholder="Confirm Password"
                    required
                  />
                </div>
              </div>
            </fieldset>
            <!-- Submit button outside the fieldset -->
            <div class="row mt-3">
              <div class="col-sm-12 text-start">
                <button type="submit" class="btn btn-primary">
                  Create User
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script>
      document
        .getElementById("createUserForm")
        .addEventListener("submit", async (event) => {
          event.preventDefault(); // Prevent default form submission
          const formData = new FormData(event.target); // Create a FormData object
          const urlEncodedData = new URLSearchParams(formData).toString(); // Convert to URL-encoded string

          const response = await fetch("/createuser", {
            method: "POST",
            headers: { "Content-Type": "application/x-www-form-urlencoded" },
            body: urlEncodedData, // Send URL-encoded data
          });

          alert(await response.text()); // Show the response message
        });
    </script>
    <!-- <script src="scripts.js"></script> -->
  </body>
</html>
